@model Northwind.Store.Model.Product

@if (Model != null)
{
    <tr>
        <td>@Model.ProductName</td>
        <td>@Model.QuantityPerUnit</td>
        <td>@Model.UnitPrice</td>
        <td>@Model.UnitsInStock</td>
        <td>
            <a asp-controller="Product" asp-action="Detail"
               asp-route-id="@Model.ProductID">
                Detail
            </a>
        </td>
    </tr>
}