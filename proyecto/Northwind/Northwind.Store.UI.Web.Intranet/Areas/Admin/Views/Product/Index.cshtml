@model IEnumerable<Northwind.Store.Model.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@{
    var wg = new WebGrid(null, rowsPerPage: 10, ajaxUpdateContainerId: "webgrid");
    wg.Bind(Model, autoSortAndPage: false, rowCount: ViewBag.Total);

    @wg.GetHtml(
        htmlAttributes: new { id = "webgrid" },
    columns: wg.Columns(
        wg.Column("ProductId", "Id"),
        wg.Column("ProductName", "Nombre"),
        wg.Column("Category.CategoryName", "Categoría"),
        wg.Column("Supplier.CompanyName", "Proveedor"),
        wg.Column(format: item =>
            Html.ActionLink("Details", "Details",
            new { id = item.ProductId })),
        wg.Column(format: item =>
            Html.ActionLink("Edit", "Edit",
            new { id = item.ProductId })),
        wg.Column(format: item =>
            Html.ActionLink("Delete", "Delete",
            new { id = item.ProductId }))),
    tableStyle: "table table-striped");
}

